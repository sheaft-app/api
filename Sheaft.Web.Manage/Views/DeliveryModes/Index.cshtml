@using Sheaft.Web.Manage.Extensions
@model IEnumerable<DeliveryModeViewModel>
@{
    ViewData["Title"] = "DeliveryModes";
    int take = ViewBag.Take;
    int currentPage = ViewBag.Page;
    Guid? imperonatingId = Context.Request.ImpersonificationId();
}

<div class="container">
    <h2 class="display-5">DeliveryModes</h2>
    <br />

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Kind</th>
                @if (!imperonatingId.HasValue)
                {
                    <th scope="col">Producer</th>
                }
                <th scope="col">Lock</th>
                <th scope="col">CreatedOn</th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>
                    <th scope="row">@entity.Name</th>
                    <td>@entity.Kind</td>
                    @if (!imperonatingId.HasValue)
                    {
                        <td>
                            @entity.Producer.Name
                            @using (Html.BeginForm("ImpersonateById", "Account", new { id = entity.Producer.Id }, FormMethod.Post, true, new { @class = "form d-inline" }))
                            {
                                <button type="submit" class="btn btn-info">
                                    <i class="fa fa-user-secret"></i>
                                </button>
                            }
                        </td>
                    }
                    <td>@(entity.LockOrderHoursBeforeDelivery)h</td>
                    <td>@entity.CreatedOn.ToString("dd/MM/yy hh:mm")</td>
                    <td>
                        <a asp-controller="DeliveryModes" asp-action="Edit" asp-route-id="@entity.Id" class="btn btn-info">
                            <i class="fa fa-pen"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="text-center">
                <td colspan="6">
                    @if (currentPage >= 1)
                    {
                        <a asp-controller="DeliveryModes" asp-action="Index" asp-route-take="@take" asp-route-page="@(currentPage-1)" class="btn btn-outline-secondary">
                            <i class="fa fa-caret-left"></i>
                        </a>
                    }
                    @if (take == Model.Count())
                    {
                        <a asp-controller="DeliveryModes" asp-action="Index" asp-route-take="@take" asp-route-page="@(currentPage+1)" class="btn btn-outline-secondary">
                            <i class="fa fa-caret-right"></i>
                        </a>
                    }
                </td>
            </tr>
        </tfoot>
    </table>
</div>
