@model PreAuthorizationViewModel
@{
    ViewData["Title"] = "PreAuthorization details";
}

<div class="container">
    <h2 class="display-4">PreAuthorization details</h2>
    <br/>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Identifier)
        @Html.TextBoxFor(m => m.Identifier, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreatedOn)
        @Html.TextBoxFor(m => m.CreatedOn, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UpdatedOn)
        @Html.TextBoxFor(m => m.UpdatedOn, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <h4>To</h4>
    <div class="form-group">
        @Html.LabelFor(m => m.Order.User.Name)
        @Html.TextBoxFor(m => m.Order.User.Name, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Debited)
        @Html.TextBoxFor(m => m.Debited, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Remaining)
        @Html.TextBoxFor(m => m.Remaining, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <h4>Operation</h4>
    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.TextBoxFor(m => m.Status, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PaymentStatus)
        @Html.TextBoxFor(m => m.PaymentStatus, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExpirationDate)
        @Html.TextBoxFor(m => m.ExpirationDate, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResultCode)
        @Html.TextBoxFor(m => m.ResultCode, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ResultMessage)
        @Html.TextBoxFor(m => m.ResultMessage, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <h4>Order</h4>
    <div class="form-group">
        @Html.LabelFor(m => m.Order.Status)
        @Html.TextBoxFor(m => m.Order.Status, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Order.CreatedOn)
        @Html.TextBoxFor(m => m.Order.CreatedOn, null, new {@class = "form-control", @disabled = "disabled"})
    </div>
    <div class="form-group">
        <a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.Order.Id" class="btn btn-info">
            Related Order
        </a>
    </div>
    <br/>
    @if (Model.PreAuthorizedPayinId.HasValue)
    {
        <h4>Payin</h4>
        <div class="form-group">
            @Html.LabelFor(m => m.PreAuthorizedPayin.Reference)
            @Html.TextBoxFor(m => m.PreAuthorizedPayin.Reference, null, new {@class = "form-control", @disabled = "disabled"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PreAuthorizedPayin.Status)
            @Html.TextBoxFor(m => m.PreAuthorizedPayin.Status, null, new {@class = "form-control", @disabled = "disabled"})
        </div>
        <div class="form-group">
            <a asp-controller="Payins" asp-action="Edit" asp-route-id="@Model.PreAuthorizedPayin.Id" class="btn btn-info">
                Related Payin
            </a>
        </div>
        <br/>
    }
    <a asp-controller="PreAuthorizations" asp-action="Index" class="btn btn-light">
        Go Back
    </a>
</div>