@using Sheaft.Domain.Enum
@using Sheaft.Domain.Extensions
@model BatchViewModel
@{
    ViewData["Title"] = "New batch";
}
<div class="container">
<h2 class="display-4 d-inline">New batch</h2>
<div class="clearfix"></div>
<br/>
<br/>
@using (Html.BeginForm("Add", "Batches", FormMethod.Post, new {@class = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <br/>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Number)
        @Html.TextBoxFor(m => m.Number, null, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DLC)
        @Html.TextBoxFor(m => m.DLC, null, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DLUO)
        @Html.TextBoxFor(m => m.DLUO, null, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comment)
        @Html.TextAreaFor(m => m.Comment, new {@class = "form-control"})
    </div>
    <br/>
    <a asp-controller="Batches" asp-action="Index" class="btn btn-light">
        Cancel
    </a>
    <button type="submit" class="btn btn-success">
        <i class="fa fa-plus">&nbsp;Create</i>
    </button>
}
</div>