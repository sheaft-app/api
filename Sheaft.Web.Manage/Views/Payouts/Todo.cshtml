@model IEnumerable<ProducerPayoutsViewModel>
@{
    ViewData["Title"] = "Producers payouts";
    int take = ViewBag.Take;
    int currentPage = ViewBag.Page;
}

<div class="container">
    <h2 class="display-5">Producers payouts</h2>
    <br />

    @if (ViewBag.Submitted != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span>Successfully submitted payout @ViewBag.Edited.Name</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <br />
    }

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Total</th>
                <th scope="col">Transfers</th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                @using (Html.BeginForm("CreatePayout", "Payouts", new { id = entity.Id }, FormMethod.Post, true, new { @class = "form d-inline" }))
                {
                    <tr>
                        <th scope="row">@entity.Name</th>
                        <td>@entity.Email</td>
                        <td>@entity.Total€</td>
                        <td>@entity.Transfers.Count()</td>
                        <td>
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@entity.Id" class="btn btn-info">
                                <i class="fa fa-eye"></i>
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-cash-register"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr class="text-center">
                <td colspan="6">
                    @if (currentPage >= 1)
                    {
                        <a asp-controller="Payouts" asp-action="Todo" asp-route-take="@take" asp-route-page="@(currentPage-1)" class="btn btn-outline-secondary">
                            <i class="fa fa-caret-left"></i>
                        </a>
                    }
                    @if (take == Model.Count())
                    {
                        <a asp-controller="Payouts" asp-action="Todo" asp-route-take="@take" asp-route-page="@(currentPage+1)" class="btn btn-outline-secondary">
                            <i class="fa fa-caret-right"></i>
                        </a>
                    }
                </td>
            </tr>
        </tfoot>
    </table>
</div>
