@model UserSettingViewModel
@{
    ViewData["Title"] = "Setting details";
}

<div class="container">
    <h2 class="display-4">Setting details</h2>
    <br />

    @using (Html.BeginForm("EditSetting", "Users", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("userId", (Guid)ViewBag.UserId)
        @Html.Hidden("settingId", Model.Id)
        
        <br />

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", @disabled="disabled" })
        </div>
        <div class="form-group">
            @Html.Label("value")
            @Html.TextBox("value", Model.Value, new { @class = "form-control" })
        </div>

        <br />
        <a asp-controller="Tags" asp-action="Index" class="btn btn-light">
            Cancel
        </a>
        <button type="submit" class="btn btn-success">
            <i class="fa fa-check">&nbsp;Save</i>
        </button>
    }

</div>
