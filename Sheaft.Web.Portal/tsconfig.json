{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "module": "ES2020",
    "strict": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "paths": {
      "$routify/*": ["./routify/*"],
      "$pages/*": ["./src/pages/*"],
      "$components/*": ["./src/components/*"],
      "$utils/*": ["./src/utils/*"],
      "$assets/*": ["./src/assets/*"],
      "$styles/*": ["./src/styles/*"],
      "$enums/*": ["./src/enums/*"],
      "$types/*": ["./src/types/*"],
      "$actions/*": ["./src/actions/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["vite.config.ts", "./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.svelte"],
  "exclude": ["node_modules/*"],
}
