@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Departments";
    int take = ViewBag.Take;
    int currentPage = ViewBag.Page;
}

    <div class="container">
        <h2 class="display-5">Departments</h2>
        <br />


        @if (ViewBag.Edited != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span>Successfully updated department @ViewBag.Edited.Name</span>
                <a asp-controller="Departments" asp-action="Edit" asp-route-id="@ViewBag.Edited.Id">View details</a>

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <br />
        }

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Points</th>
                    <th scope="col">Level</th>
                    <th scope="col">RequiredProducers</th>
                    <th scope="col">Producers</th>
                    <th scope="col">Stores</th>
                    <th scope="col">Consumers</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                <tr>
                    <th scope="row">@entity.Name</th>
                    <td>@entity.Position</td>
                    <td>@entity.Points</td>
                    <td>@entity.Level</td>
                    <td>@entity.RequiredProducers</td>
                    <td>@entity.ProducersCount</td>
                    <td>@entity.StoresCount</td>
                    <td>@entity.ConsumersCount</td>
                    <td>
                        <a asp-controller="Departments" asp-action="Edit" asp-route-id="@entity.Id" class="btn btn-info">
                            <i class="fa fa-pen"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr class="text-center">
                    <td colspan="8">
                        @if (currentPage >= 1)
                        {
                            <a asp-controller="Departments" asp-action="Index" asp-route-take="@take" asp-route-page="@(currentPage-1)" class="btn btn-outline-secondary">
                                <i class="fa fa-caret-left"></i>
                            </a>
                        }
                        @if (take == Model.Count())
                        {
                            <a asp-controller="Departments" asp-action="Index" asp-route-take="@take" asp-route-page="@(currentPage+1)" class="btn btn-outline-secondary">
                                <i class="fa fa-caret-right"></i>
                            </a>
                        }
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
