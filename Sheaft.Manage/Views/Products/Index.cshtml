@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Products";
    int take = ViewBag.Take;
    int currentPage = ViewBag.Page;
}

    <div class="container">
        <h1 class="display-4">Products</h1>
        <br />

        @if (ViewBag.Removed != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span>Successfully removed product @ViewBag.Removed</span>

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <br />
        }

        @if (ViewBag.Edited != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <span>Successfully updated product @ViewBag.Edited.Name</span>
                <a asp-controller="Products" asp-action="Edit" asp-route-id="@ViewBag.Edited.Id">View details</a>

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <br />
        }

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Reference</th>
                    <th scope="col">Name</th>
                    <th scope="col">WholeSalePrice</th>
                    <th scope="col">Vat</th>
                    <th scope="col">Producer</th>
                    <th scope="col">CreatedOn</th>
                    <th scope="col">Removed</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                <tr>
                    <th scope="row">@entity.Reference</th>
                    <th>@entity.Name</th>
                    <th>@entity.WholeSalePricePerUnit</th>
                    <th>@(entity.Vat)%</th>
                    <td>@entity.Producer.Name</td>
                    <td>@entity.CreatedOn</td>
                    <td>@entity.RemovedOn.HasValue</td>
                    <td>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@entity.Id" class="btn btn-info">
                            <i class="fa fa-pen"></i>
                        </a>

                        @if (entity.RemovedOn.HasValue)
                        {
                            @using (Html.BeginForm("Restore", "Products", new { id = entity.Id }, FormMethod.Post, true, new { @class = "form d-inline" }))
                            {
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-trash-restore"></i>
                                </button>
                            }
                        }
                        else
                        {
                            @using (Html.BeginForm("Delete", "Products", new { id = entity.Id }, FormMethod.Post, true, new { @class = "form d-inline" }))
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                </button>
                            }
                        }
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr class="text-center">
                    <td colspan="4">
                        @if (currentPage >= 1)
                        {
                            <a asp-controller="Products" asp-action="Index" asp-route-take="@take" asp-route-page="@(currentPage-1)" class="btn btn-info">
                                <i class="fa fa-caret-left"></i>
                            </a>
                        }
                        @if (take == Model.Count())
                        {
                            <a asp-controller="Products" asp-action="Index" asp-route-take="@take" asp-route-page="@(currentPage+1)" class="btn btn-info">
                                <i class="fa fa-caret-right"></i>
                            </a>
                        }
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
